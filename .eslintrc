{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "airbnb-base"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "DEV"      : false,
    "TEST"     : false,
    "PROD"     : false,
    "COVERAGE" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [2, "prefer-single"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"]
  }
}
